<header
  class="top-0 fixed bg-transparent flex flex-row items-center justify-between w-full h-min px-6 py-6 md:px-20 z-50">
  <h2 class="text-white text-3xl font-bold underline decoration-purple-700">
    NUCOF
  </h2>
  <button
    class="button-three size-14 bg-black flex items-center justify-center overflow-hidden border-black border-[10px]"
    id="menuContainer"
    aria-controls="primary-navigation"
    aria-expanded="false">
    <svg
      stroke="white"
      fill="none"
      class="hamburger"
      viewBox="-10 -10 120 120"
      width="250">
      <path
        class="line"
        stroke-width="10"
        stroke-linecap="round"
        stroke-linejoin="round"
        d="m 20 40 h 60 a 1 1 0 0 1 0 20 h -60 a 1 1 0 0 1 0 -40 h 30 v 70">
      </path>
    </svg>
  </button>
  <nav
    id="nav"
    class="hidden absolute h-screen w-full bg-black/95 top-0 left-0 -z-10 items-center justify-center text-gray-800 text-6xl font-bold animate-flip-down animate-ease-in-out">
    <ul class="flex flex-col items-center justify-center gap-8 w-full">
      <li>
        <a
          class="hover:text-white hover:animate-fade-right hover:animate-once hover:animate-ease-out"
          href="">HOME</a
        >
      </li>
      <li>
        <a
          class="hover:text-white hover:animate-fade-right hover:animate-once hover:animate-ease-out"
          href="">ABOUT US</a
        >
      </li>
      <li>
        <a
          class="hover:text-white hover:animate-fade-right hover:animate-once hover:animate-ease-out"
          href="">CONTACT</a
        >
      </li>
    </ul>
  </nav>
</header>

<style>
  .button-three .hamburger {
    transition:
      translate 1s,
      rotate 1s;
  }

  .button-three[aria-expanded="true"] .hamburger {
    translate: 3px -3px;
    rotate: 0.125turn;
  }

  .button-three .line {
    transition: 1s;
    stroke-dasharray: 60 31 60 300;
  }

  .button-three[aria-expanded="true"] .line {
    stroke-dasharray: 60 105 60 300;
    stroke-dashoffset: -90;
  }
</style>

<script>
  const menuContainer = document.getElementById("menuContainer");
  const nav = document.getElementById("nav");

  menuContainer?.addEventListener("click", () => {
    if (nav?.style.display === "none" || nav?.style.display === "") {
      nav!.style.display = "flex";
    } else {
      nav!.style.display = "none";
    }

    const currentState = menuContainer.getAttribute("data-state");

    if (!currentState || currentState === "closed") {
      menuContainer.setAttribute("data-state", "opened");
      menuContainer.setAttribute("aria-expanded", "true");
    } else {
      menuContainer.setAttribute("data-state", "closed");
      menuContainer.setAttribute("aria-expanded", "false");
    }
  });
</script>
