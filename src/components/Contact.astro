<section
  class="w-full p-5 md:p-20 text-white bg-black flex flex-col md:flex-row gap-20 md:gap-0">
  <div class="w-full md:w-1/2">
    <div class="w-fit">
      <h2
        class="font-bold text-7xl w-fit text-transparent bg-clip-text bg-gradient-to-tr from-[#32569a] via-[#3d2875] to-[#b767a6]">
        Get in touch
      </h2>
      <p class="text-balance mt-10">
        Have a project in mind? Looking for someone to make it happen? Reach out
        through the form and we will get back to you in the next 48 hours.
      </p>
    </div>
  </div>
  <div class="w-full md:w-1/2">
    <div class="mx-auto w-full max-w-[550px]">
      <form action="https://formbold.com/s/FORM_ID" method="POST">
        <div class="mb-5">
          <label for="name" class="mb-3 block text-base font-medium">
            Full Name
          </label>
          <input
            type="text"
            name="name"
            id="name"
            placeholder="Full Name"
            class="w-full rounded-md bg-gray-800 py-3 px-6 text-base font-medium text-[#6B7280] outline-none focus:-[#6A64F1] focus:shadow-md"
          />
        </div>
        <div class="mb-5">
          <label for="email" class="mb-3 block text-base font-medium">
            Email Address
          </label>
          <input
            type="email"
            name="email"
            id="email"
            placeholder="example@domain.com"
            class="w-full rounded-md bg-gray-800 py-3 px-6 text-base font-medium text-[#6B7280] outline-none focus:-[#6A64F1] focus:shadow-md"
          />
        </div>
        <div class="mb-5">
          <label for="subject" class="mb-3 block text-base font-medium">
            Your budget
          </label>
          <input
            type="text"
            name="subject"
            id="subject"
            placeholder="Enter your subject"
            class="w-full rounded-md bg-gray-800 py-3 px-6 text-base font-medium text-[#6B7280] outline-none focus:-[#6A64F1] focus:shadow-md"
          />
        </div>
        <div class="mb-5">
          <label for="message" class="mb-3 block text-base font-medium">
            Tell me what are you looking for?
          </label>
          <textarea
            rows="4"
            name="message"
            id="message"
            placeholder="Type your message"
            class="w-full resize-none rounded-md bg-gray-800 py-3 px-6 text-base font-medium text-[#6B7280] outline-none focus:-[#6A64F1] focus:shadow-md"
          ></textarea>
        </div>
        <div>
          <button
            class="hover:shadow-form rounded-md bg-gradient-to-tr from-[#32569a] via-[#3d2875] to-[#b767a6] py-3 px-8 text-base font-semibold text-white outline-none">
            Submit
          </button>
        </div>
      </form>
    </div>
  </div>
</section>
